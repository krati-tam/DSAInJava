class solution 
{
  public TreeNode pruneTree(TreeNode root){
        if(root == null) return root;
        TreeNode left = pruneTree(root.left);
        root.left = left;
        TreeNode right = pruneTree(root.right);
        root.right = right;
        if(root.data == 0 && root.left == null && root.right == null)
            root = null;
        return root;
    }
}
